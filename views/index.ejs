<div class="row">
  <div class="span8" id="posts-list">
    <% posts.forEach(function(post){ %>
    <div class="list-item" id="post-<%= post.slug %>">
      <div class='content'>
        <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
        <div><%- post.summary %></div>
        <div>
          <span class="label"><i class="icon-calendar icon-white"></i> <%= dateFormat(post.date,'yyyy-mm-dd') %> </span>
          <a class="badge badge-info" href="/?category=<%= post.category %>"><i class="icon-bookmark icon-white"></i> <%= post.category||'Posts' %></a>
          <% if(post.tags){ %>
          <% post.tags.forEach(function(tag){ %>
          <a class="badge badge-inverse" href="/?tag=<%= tag %>"><i class="icon-tag icon-white"></i> <%= tag %></a>
          <% }) %>
          <% } %>
          <a class="btn btn-primary btn-small pull-right" href="/post/<%= post.slug %>">Detail &raquo;</a>
        </div>
      </div>
    </div>
    <% }) %>
    <% include pager %>
  </div>
</div>
